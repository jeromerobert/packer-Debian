{
  "variables": {
      "vm_name": "debian-12-latest.qcow2",
      "numvcpus": "1",
      "disk_size": "4G",
      "iso_url": "https://cdimage.debian.org/cdimage/cloud/bookworm/daily/latest/debian-12-genericcloud-amd64-daily.qcow2",
      "iso_checksum": "0ae5f6345ea16a9559a3f8b85d6b88d558e97220",
      "boot_wait": "5s",
      "headless" : "true"
    },
    "builders": [
      {
        "type": "qemu",
        "format": "qcow2",
        "accelerator": "kvm",
        "disk_size": "{{ user `disk_size` }}",
        "http_directory": "http",
        "vm_name": "{{ user `vm_name` }}",
        "boot_wait": "{{ user `boot_wait` }}",
        "iso_checksum": "{{ user `iso_checksum` }}",
        "iso_url": "{{ user `iso_url` }}",
        "disk_image": true,
        "disk_compression": true,
        "shutdown_command": "echo 'packer'|sudo systemctl poweroff ",
        "ssh_password": "packer",
        "ssh_username": "debian",
        "ssh_port": 22,
        "ssh_timeout": "5m",
        "headless": "{{ user `headless` }}",
        "net_device": "virtio-net",
        "disk_interface": "virtio",
        "qemuargs": [
           ["-smbios", "type=1,serial=ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/cloud-init/"]
        ]
      }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'packer'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
          "scripts/cleanup.sh"
      ]
    }
  ]
}
